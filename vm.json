{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ntier-net-range": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "defaultValue": "192.168.0.0/16"
        },
        "subnet-ranges": {
            "type": "array",
            "metadata": {
                "description": "cidr ranges of subnet"
        },
        "defaultValue": ["192.168.0.0/24","192.168.1.0/24","192.168.2.0/24"]
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "virtualNetwork1",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-04-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "virtualNetwork1"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('ntier-net-range')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "web",
                        "properties": {
                            "addressPrefix": "[parameters('subnet-ranges')[0]]"
                        }
                    },
                    {
                        "name": "bussiness",
                        "properties": {
                            "addressPrefix": "[parameters('subnet-ranges')[1]]"                              
                        }
                    },
                    {
                        "name": "data",
                        "properties": {
                            "addressPrefix": "[parameters('subnet-ranges')[2]]"
                        }
                    }
                ]
            }
        },
        {
            "name": "webnsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "ssh",
                        "properties": {
                            "description": "description",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1000,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "http",
                        "properties": {
                            "description": "open http inbounds",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "80",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1000,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "https",
                        "properties": {
                            "description": "open inbound https roles",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks','virtualNetwork1')]"
            ]     
        },

        {
            "name": "bussinessnsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks','virtualNetwork1')]"
            ]
            },
        {
            "name": "webip1",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2023-04-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "webip1"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "dnsname1"
                }
            }   
        },
{
    "name": "webnic",
    "type": "Microsoft.Network/networkInterfaces",
    "apiVersion": "2023-04-01",
    "location": "[resourceGroup().location]",
    "tags": {
        "displayName": "webnic"
    },
    "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'virtualNetwork1')]"
    ],
    "properties": {
        "ipConfigurations": [
            {
                "name": "ipConfig1",
                "properties": {
                    "privateIPAllocationMethod": "Dynamic",
                    "subnet": {
                        "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'virtualNetwork1', 'subnet1')]"
                    },
                    "publicIPAddress": {
                        "id": "[resourceId('Microsoft.Network/publicIPAddresses','webip1')]"
                    }
                }
            }
        ],
        "networkSecurityGroup": {
            "id": "[resourceId('Microsoft.Network/networkSecurityGroups','webnsg')]"
        }
    }
}
  ],
    "outputs": {}
}